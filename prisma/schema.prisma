generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}


model User {
  id        String    @id @default(cuid())
  name      String?
  email     String    @unique
  password  String
  role      String    @default("user")
  active    Boolean   @default(false)
  vehicles  Vehicle[]
  branch    String?   @default("DMM") //or "JED"
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

}

model Customer {
  id                               String    @id() @default(cuid())
  name                             String    @unique
  email                            String?
  phone                            String?
  address                          String?
  website                          String?
  taxId                            String?
  customerType                     String    @default("INDIVIDUAL") 
  vehicles                         Vehicle[]
  createdAt                        DateTime @default(now())
  updatedAt                        DateTime @updatedAt

}
model Broker{
  id           String    @id() @default(cuid())
  name         String    @unique
  email        String?
  phone        String?
  percentage   Float?
  vehicles     Vehicle[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

}

model VehicleManufacturer {
  id           String        @id @default(cuid())
  name         String
  description  String
  country      String
  vehicleTypes VehicleType[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

}

model VehicleType {
  id             String              @id @default(cuid())
  modelType      String
  description    String
  manufacturer   VehicleManufacturer @relation(fields: [manufacturerId], references: [id],onDelete: Cascade)   
  manufacturerId String
  vehiclesInfo   VehicleInfo[]
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  @@index([manufacturerId])
}

model Color {
  id           String        @id @default(cuid())
  color        String
  description  String 
  vehiclesInfo VehicleInfo[]
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
}


model Vehicle {
  id               Int               @id @default(autoincrement())
  vin              String            @unique
  reqNo            String
  reqDate          String
  bayanNo          String
  bayanDate        String
  port             String 
  paymentType      String            
  price            Float
  tax              Float
  customer         Customer         @relation(fields: [customerId], references: [id],onDelete: Restrict)
  customerId       String 
  brokerId         String?
  broker           Broker? @relation(fields: [brokerId], references: [id],onDelete: SetNull)
  vehicleInfo      VehicleInfo?
  visualInspection VisualInspection?
  emissionTest     Emission?
  highBeamLevel    HighBeamLevel?
  sideSlip         SideSlip?
  suspensionTest   Suspension?
  brakeTest        Brake?
  userId           String?
  user             User?             @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt

  @@index([customerId])
  @@index([userId])
  @@index([brokerId])
}


model VehicleInfo {
  vehicleId     Int         @id
  vehicle       Vehicle     @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  color         Color?       @relation(fields: [colorId], references: [id],onDelete: SetNull)
  colorId       String?
  year          String
  vehicleType   VehicleType? @relation(fields: [vehicleTypeId], references: [id],onDelete: SetNull)
  vehicleTypeId String?
  category      String      
  condition     String      
  fuelType      String      
  engine        String?     @default("N/A")
  engineSize    String?     @default("N/A")
  gear          String?     @default("AUTOMATIC") 
  mileage       String
  seats         String
  remarks       String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@index([vehicleId])
  @@index([colorId])
  @@index([vehicleTypeId])
}

model Emission {
  vehicleId Int       @id
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  co        Float? 
  hc        Float? 
  diesel    Float? 
  result    String   @default("PASS")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

model HighBeamLevel {
  vehicleId Int       @id
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  left      Float
  right     Float
  result    String   @default("PASS")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

model SideSlip {
  vehicleId Int       @id
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  reading   Float
  result    String   @default("PASS")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

model Suspension {
  vehicleId Int       @id
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  fl        Float //front left
  fr        Float //front right
  rl        Float //rear left
  rr        Float //rear right
  result    String   @default("PASS")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

model Brake {
  vehicleId Int       @id
  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  parking   Float //parking brake
  front     Float //front brake
  rear      Float //rear brake
  result    String   @default("PASS")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([vehicleId])
}

